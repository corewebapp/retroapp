@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <input class="col-3 form-control" type="text" id="userInput" placeholder="" value="" required="">
        <div class="invalid-feedback">
            Valid first name is required.
        </div>
        <div class="col-3">
            <button class="btn btn-primary" type="button" id="sendButton">
                Send Message
                <span class="spinner-border spinner-border-sm hidden" id="sendButtonSpinner" role="status" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/board-hub.js"></script>
}
